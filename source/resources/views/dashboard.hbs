<div class="container mt-5">
  <h2 class="mb-4 text-primary">🎛️ Bảng quản trị</h2>
  <h4>🥘 Danh sách bài viết:</h4>
  <ul class="list-group mb-4">
    {{#each dishes}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <strong>{{this.name}}</strong> — Đăng bởi: {{this.userId.username}} ({{this.userId.role}})
      </div>
      <div>
        <a href="/dishes/{{this._id}}/edit" class="btn btn-sm btn-warning me-2">Chỉnh sửa</a>
        <form action="/admin/{{this._id}}?_method=DELETE" method="POST" class="d-inline">
          <button type="submit" class="btn btn-sm btn-danger">Xoá</button>
        </form>
      </div>
    </li>
  {{/each}}
  </ul>

  <h4>👥 Danh sách tài khoản:</h4>
  <ul class="list-group">
    {{#each users}}
      <li class="list-group-item">
        {{this.username}} – <strong>{{#ifEquals this.role 'admin'}}🛡️ Admin{{else}}👤 Thành viên{{/ifEquals}}</strong>
      </li>
    {{/each}}
  </ul>
</div>
