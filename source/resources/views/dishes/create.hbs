  tinymce.init({
    selector: '#ingredients',
    menubar: false,
    plugins: 'lists link image table code',
    toolbar: 'bold italic underline | bullist numlist | undo redo | link',
    height: 200,
  });

  tinymce.init({
    selector: '#steps',
    menubar: false,
    plugins: 'lists link image table code',
