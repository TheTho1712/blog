<!DOCTYPE html>
<html lang ="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form HTML CSS</title>
    <link rel="stylesheet" href="/css/app.css">
    {{!-- <link rel="stylesheet" href="/source/resources/scss/app.scss"> --}}
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


</head>

<body class="login-page">
    
    <div class="wrapper">
        <div class="form-container">
            <form action="/register" method="POST">
                <h1>Đăng ký</h1>
                <div class="input-box">
                    <input type="text" name="username" placeholder="Tên người dùng"
                    required>
                    <i class='bx bxs-user'></i>
                </div>

                <div class="input-box">
                    <input type="text" name="email" placeholder="Email"
                    required>
                    <i class='bx bxs-envelope' ></i>
                </div>

                <div class="input-box">
                    <input type="password" name="password" placeholder="Nhập mật khẩu"
                    required>
                    <i class='bx bxs-lock-alt' ></i>
                </div>
                
                <div class="input-box">
                    <select name="gender" required>
                        <option value="" disabled selected>Chọn giới tính</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                        <option value="Khác">Khác</option>
                    </select>
                    <i class='bx bx-male-female'></i>
                </div>

                <div class="input-box">
                    <input type="number" name="age" placeholder="Tuổi" min="0" required>
                    <i class='bx bx-calendar'></i>
                </div>
                                

                <button type="submit" class="btn">Đăng ký</button>

                <div class="register">
                    <p>Bạn đã có tài khoản? 
                        <a href="/login">Đăng nhập</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</body>

{{#if success}}
<script>
    Swal.fire({
        icon: 'success',
        title: 'Đăng ký thành công!',
        text: 'Bây giờ bạn có thể đăng nhập',
        confirmButtonText: 'OK'
    }).then(() => {
        window.location.href = '/login';
    });
</script>
{{/if}}

{{#if error}}
<script>
    Swal.fire({
        icon: 'error',
        title: 'Đăng ký thất bại!',
        text: '{{error}}',
        confirmButtonText: 'OK'
    });
</script>
{{/if}}