<div class="mt-4">
    <form method="POST" action="">
        <div class="register-form">
            <label for="usename-input">Tên đăng nhập</label>
            <input type="text" name="username" class="form-control" id="usename-input" placeholder="Nhập tài khoản...">
        </div>

        <div class="register-form">
            <label for="passwork-input">Mật khẩu</label>
            <input type="text" name="passwork" class="form-control" id="passwork-input" placeholder="Nhập mật khẩu...">
        </div>

        <div class="register-form">
            <label for="passworkcorrect-input">Nhập lại mật khẩu</label>
            <input type="text" name="passwork" class="form-control" id="passworkcorrect-input" placeholder="Nhập lại mật khẩu...">
        </div>

        <div class="gmail-form">
            <label for="gmail-input">Email</label>
            <input type="text" name="gmail" class="form-control" id="gmail-input" placeholder="Nhập vào email...">
        </div>

        <div class="form-group">
            <label for="gender-input">Giới tính</label>
            <select name="gender" class="form-control" id="gender-input">
                <option value="">---Chọn giới tính---</option>
                <option value="male">Nam</option>
                <option value="female">Nữ</option>
                <option value="other">Khác</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Sign up</button>
        <button type="cancel" class="btn btn-2">Huỷ</button>
    </form>
</div>